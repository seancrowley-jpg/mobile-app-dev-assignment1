<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.ViewRecipeActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorAccent"
        android:fitsSystemWindows="true"
        app:elevation="0dip"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbarRecipe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:titleTextColor="@color/white" />

    </com.google.android.material.appbar.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="42dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/recipeNameHeader"
                android:layout_width="409dp"
                android:layout_height="25dp"
                android:layout_marginStart="2dp"
                android:layout_marginTop="78dp"
                android:text="Name" />

            <TextView
                android:id="@+id/recipeViewName"
                android:layout_width="409dp"
                android:layout_height="78dp"
                android:layout_marginStart="1dp"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="1dp"
                android:text="Scrambled Eggs On Toast"
                android:textSize="40sp" />

            <TextView
                android:id="@+id/recipeDescriptionHeader"
                android:layout_width="409dp"
                android:layout_height="25dp"
                android:layout_marginStart="2dp"
                android:layout_marginTop="20dp"
                android:text="Description" />

            <TextView
                android:id="@+id/recipeViewDescription"
                android:layout_width="409dp"
                android:layout_height="78dp"
                android:layout_marginStart="1dp"
                android:layout_marginTop="4dp"
                android:text="Scrambled Eggs On Toast"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="409dp"
                android:layout_height="202dp"
                android:layout_marginTop="20dp"
                app:srcCompat="@drawable/ic_launcher_background" />

            <TextView
                android:layout_width="409dp"
                android:layout_height="25dp"
                android:layout_marginStart="2dp"
                android:layout_marginTop="20dp"
                android:text="Ingredients" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/ingredientRecyclerRecipeView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scrollbars="vertical"
                app:layout_behavior="@string/appbar_scrolling_view_behavior"/>

            <TextView
                android:layout_width="409dp"
                android:layout_height="25dp"
                android:layout_marginStart="2dp"
                android:layout_marginTop="20dp"
                android:text="Steps" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/stepsRecyclerRecipeView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scrollbars="vertical"
                app:layout_behavior="@string/appbar_scrolling_view_behavior"/>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>